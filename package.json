{
    "name": "@toplo/root",
    "version": "0.0.0",
    "private": true,
    "license": "MIT",
    "engines": {
        "node": ">=14.17",
        "pnpm": ">=7.3.0"
    },
    "packageManager": "pnpm@7.13.4",
    "scripts": {
        "version": "ts-node scripts/version.ts",
        "changelog": "ts-node scripts/changelog.ts",
        "ci:publish": "ts-node scripts/publish.ts",
        "clean": "pnpm -r --parallel --stream run clean",
        "build": "pnpm run clean && pnpm -r --parallel --filter=!./packages/db --stream run build && pnpm run postbuild",
        "postbuild": "pnpm -r --parallel --filter=./packages/db --stream run build",
        "test": "pnpm -r --parallel --stream run test",
        "watch": "pnpm -r run dev && WATCH=true pnpm -r --parallel --stream run dev",
        "lint": "eslint packages/**",
        "lint:fix": "pnpm run lint --fix",
        "prepare": "is-ci || echo is not ci"
    },
    "resolutions": {
        "@types/node": "18.11.0",
        "@types/config": "3.3.0",
        "@types/jest": "29.1.2",
        "@types/node-fetch": "2.6.2",
        "rimraf": "3.0.2",
        "jest": "29.2.0",
        "is-ci": "3.0.1",
        "node-fetch": "2.6.7",
        "ts-jest": "29.0.3",
        "ts-node": "10.9.1",
        "typescript": "4.8.4"
    },
    "devDependencies": {
        "@toplo/common": "workspace:*",
        "@toplo/api": "workspace:*",
        "@types/config": "3.3.0",
        "@types/jest": "29.1.2",
        "@types/node": "18.11.0",
        "@types/node-fetch": "2.6.2",
        "@typescript-eslint/eslint-plugin": "5.40.0",
        "@typescript-eslint/parser": "5.40.0",
        "eslint": "8.25.0",
        "globby": "11.0.4",
        "is-ci": "3.0.1",
        "jest": "29.2.0",
        "node-fetch": "2.6.7",
        "rimraf": "3.0.2",
        "ts-jest": "29.0.3",
        "ts-node": "10.9.1",
        "picocolors": "1.0.0",
        "typescript": "4.8.4"
    },
    "lint-staged": {
        "*.{md,yml,json}": "prettier --write",
        "*.{js,ts}": [
            "fix"
        ]
    }
}
